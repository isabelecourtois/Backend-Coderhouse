<h1 style="color:blue;">Ingrese datos</h1>
<br>

<form action="/productos" method="post">

    <div class="form-group">
        <label for="producto"><b>Producto</b></label>
        <input id="producto" class="form-control" type="text" name="producto">
    </div>

    <div class="form-group">
        <label for="precio"><b>Precio</b></label>
        <input id="precio" class="form-control" type="number" name="precio">
    </div>

    <div class="form-group">
        <label for="thumbnail"><b>Thumbnail</b></label>
        <input id="thumbnail" class="form-control" type="text" name="thumbnail">
    </div>

    <button class="btn btn-success mt-3 mb-5">Enviar</button>
</form>

<h2 style="color:crimson;">Historial</h2>

{{#if productos.length }}
<div class="table-responsive">
    <table class="table table-dark">
        <tr style="color: yellow;">
            <th>Producto</th>
            <th>Precio</th>
            <th>Thumbnail</th>
        </tr>
        {{#each productos }}
        <tr>
            <td>
                {{producto}}
            </td>
            <td>
                {{precio}}
            </td>
            <td>
                <img src="{{thumbnail}}">
            </td>
        </tr>
        {{/each}}
    </table>
</div>
{{else}}
<h3 class="alert alert-danger">no se encontraron productos</h3>
{{/if}}